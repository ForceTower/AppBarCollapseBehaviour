<resources>
    <!-- Base application theme. -->
    <style name="PicPay" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.PicPay.Toolbar</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Widget.PicPay.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextStyle">@style/TextAppearance.PicPay.Toolbar</item>
    </style>

    <style name="TextAppearance.PicPay.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">32dp</item>
    </style>

</resources>